<!DOCTYPE module SYSTEM "module.dtd">

<module name="cnn" dir="computer_vision">
  <doc>
    <description>Convolutional Neural Network
    Receives images, performs inference through a CNN and inputs control commands [left, forward, right]
    </description>

    <define name="CNN_CAMERA" value="front_camera|bottom_camera" description="Video device to use"/>
    <define name="CNN_FPS" value="0" description="Desired FPS (0: camera rate)"/>
  </doc>

  <dep>
    <depends>video_thread</depends>
  </dep>

  <header>
    <file name="cnn.h"/>
  </header>

  <init fun="cnn_init()"/>
  <makefile target="ap|nps">
    <file name="cnn.c"/>
  </makefile>
</module>

